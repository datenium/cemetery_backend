{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  }
}
